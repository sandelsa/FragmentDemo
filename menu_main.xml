<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.springroll.database.MainActivity">
    <item
        android:id="@+id/action_today"
        android:orderInCategory="100" android:icon="@android:drawable/ic_menu_today"
        android:title="@string/action_today"
        app:showAsAction="ifRoom|withText"/>
    <item android:id="@+id/action_add_event"
        android:title="@string/menu_new_event" android:icon="@android:drawable/ic_menu_add"
        android:orderInCategory="100"
        app:showAsAction="ifRoom|withText"/>
    <group android:checkableBehavior="single">
        <item android:id="@+id/action_day_view"
            android:title="@string/action_day_view" android:icon="@android:drawable/ic_menu_day"
            android:orderInCategory="100"
            app:showAsAction="ifRoom"/>
        <item android:id="@+id/action_three_day_view"
            android:title="@string/action_three_day_view"
            android:orderInCategory="100"
            app:showAsAction="ifRoom"
            android:checked="true"/>
        <item android:id="@+id/action_week_view"
            android:title="@string/action_week_view" android:icon="@android:drawable/ic_menu_week"
            android:orderInCategory="100"
            app:showAsAction="ifRoom"/>
        <item
            android:id="@+id/action_settings"
            android:orderInCategory="100"
            android:title="@string/action_settings"
            app:showAsAction="ifRoom" />
        <item
            android:id="@+id/action_logout"
            android:orderInCategory="100"
            android:title="@string/action_logout"
            app:showAsAction="ifRoom"
            android:checked="false"/>
        <item
            android:id="@+id/action_compute"
            android:orderInCategory="100"
